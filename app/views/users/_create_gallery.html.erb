<%= form_with(model: @gallery, local: true) do |form| %>
  
    <div class="form-inline my-2 my-lg-0">
  
      <%= form.text_field :name, id: :gallery_name, class: "form-control mr-sm-2" %>
  
      <%= form.submit "Create new gallery", class: "btn btn-primary my-2 my-sm-0" %>
    </div>
  
  <% end %>